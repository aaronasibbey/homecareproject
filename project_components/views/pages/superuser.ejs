<% include ../partials/header %>
<% include ../partials/menu %>

<main>
  <style>
   
   h1 {
        color: blue;
        font-family: 'Courier New', Courier, monospace;
        font-size: 400%;
        text-align: center;
        font-weight: bolder;
        
      }

    body{ 

      background-color: bisque;




    }
    .button {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
text-align: center;
position: relative;
  text-decoration: none;
  display: block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  width: 100%;
}

.button2 {background-color: #008CBA;} /* Blue */
.button3 {background-color: #f44336;} /* Red */ 
.button4 {background-color: #e7e7e7; color: black;} /* Gray */ 
.button5 {background-color: #555555;} /* Black */

  </style>
  <body>
    <h1>Welcome, Admin</h1>

<button class="button">Add Patient</button>
<button class="button button2">Add Nurse</button>
<button class="button button3">Assign Nurse to Patient</button>
<button class="button button4">View All Patients</button>

    <div class="container">
      <br/>
      <h3>Select a patient:</h3>
      <form action="/selectpatient" method="POST">
        <select class="form-control form-control-lg">
          <option>Patient 1</option>
          <option>Patient 2</option>
          <option>Patient 3</option>
        </select>
      </form>
      <div class="row">
        <div class="col-sm">
          <br/>
          <h3>PATIENT_NAME</h3>
          <br/>
          <table class="table">
            <tbody>
              <tr>
                <th scope="row">Age:</th>
                <td>70</td>
              </tr>
              <tr>
                <th scope="row">Schedule:</th>
                <td>Monday - Wednesday <br/> 8 AM - 12 PM</td>
              </tr>
              <tr>
                <th scope="row">Medicine Needed:</th>
                <td>Advil</td>
              </tr>
              <tr>
                <th scope="row">Notes:</th>
                <td>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed blandit purus a efficitur tristique. Proin cursus ipsum quam, egestas scelerisque quam imperdiet at. </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-sm">
          <div class="container">
            <br/>
            <h3>Patient Update</h3>
            <h6>Provide an update on how PATIENT_NAME is doing for their family.</h6>
            <br/>
            <form action="/patientupdate" method="POST">
                <div class="mb-3">
                    <label for="updateInput" class="form-label">Update:</label>
                    <textarea type="text" class="form-control" 
                      id="updateInput" 
                      name="updateInput" 
                      rows="6"
                      required></textarea>
                </div>
                <button id="submitButton" class="btn btn-primary" type="submit">Post Update</button>
            </form>
          </div>
        </div>
      </div>
    </div>    
  </body>
</main>



<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/home">Homecare</a>    
      <ul class="navbar-nav mr-auto">
        <% if(locals.user && (locals.user.permission_level == 'family')) { %>
        <li class="nav-item"> <!-- // if not logged in -->
          <a class="nav-link" href="/patientinfo">Patient Portal</a>
        </li>
        <% } %>
        <% if( locals.user && (locals.user.permission_level == 'nurse' || locals.user.permission_level == 'super')) { %>
        <li class="nav-item"> <!-- // if not logged in -->
          <a class="nav-link" href="/nurse">Nurse Portal</a>
        </li>
        <% } %>
        <% if( locals.user && locals.user.permission_level == 'super') { %>
        <li class="nav-item">
          <a class="nav-link" href="/superuser">Superuser Portal</a>
        </li>
        <% } %>
        <% if(!locals.user) { %>
        <li class="nav-item"> <!-- // should be gone if logged in -->
          <a class="nav-link" href="/login">Login</a>
        </li>
        <% } %>
        <% if(locals.user) { %>
        <li class="nav-item"> <!-- // if logged in -->
          <a class="nav-link" href="/logout">Logout</a>
        </li>
        <% } %>
      </ul>
    </nav>
</header>